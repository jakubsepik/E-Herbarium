<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#182A3E"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="#243A52"
        android:backgroundTint="#243A52"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <ImageView
            android:id="@+id/insertImage"
            android:layout_width="226dp"
            android:layout_height="226dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:maxWidth="226dp"
            android:maxHeight="226dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/spruce" />

        <ImageButton
            android:id="@+id/dismissButton"
            android:layout_width="34dp"
            android:layout_height="31dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22dp"
            android:background="@null"
            android:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dismiss_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/segoe_regular"
            android:maxLength="14"
            android:scrollbars="vertical"
            android:text="Spruce"
            android:textColor="#F9F9F9"
            android:textSize="35sp" />

        <View
            android:id="@+id/nameDivider"
            android:layout_width="330dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:backgroundTint="#E1E1E1" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="This is only a placeholder text to hold a place and shouldn't be used for anything else"
            android:textColor="#E1E1E1"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:minHeight="42dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editButton"
                android:layout_width="112dp"
                android:layout_height="48dp"
                android:layout_gravity="center|center_horizontal"
                android:background="@drawable/border_for_widgets"
                android:backgroundTint="#30AB6A"
                android:gravity="center|center_horizontal|center_vertical"
                android:paddingTop="0dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="#30AB6A"
                android:textSize="28sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>