<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="284dp"
    android:layout_height="358dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/forgor_dialog">


    <TextView
        android:id="@+id/resetText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/segoe_regular"
        android:gravity="center_horizontal"
        android:text="Forgot \n Password ? "
        android:textAlignment="center"
        android:textColor="#E8E8E8"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/resetPrompt"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="47dp"
        android:layout_weight="1"
        android:fontFamily="@font/segoe_regular"
        android:gravity="center_horizontal"
        android:text="Please Input Your E-Mail:"
        android:textAlignment="center"
        android:textColor="#EFEFEF"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/resetArea"
        android:layout_width="226dp"
        android:layout_height="40dp"
        android:layout_below="@+id/resetPrompt"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bar_background"
        android:fontFamily="@font/segoe_regular"
        android:hint="E-mail"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#EFEFEF"
        android:textColorHint="#85EFEFEF" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="133dp"
        android:layout_height="44dp"
        android:layout_below="@+id/resetArea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:backgroundTint="#30AB6A"
        android:fontFamily="@font/segoe_regular"
        android:text="Send"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/reset_exit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_close_button_forgor" />

</RelativeLayout>